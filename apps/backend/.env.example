# Backend Environment Configuration
# Luminari Wilderness Editor
# Copy this file to .env and fill in your actual values

# Database Configuration - REQUIRED
MYSQL_DATABASE_URL=mysql+pymysql://wildeditor_user:YOUR_PASSWORD@localhost:3306/luminari_muddev

# API Authentication - REQUIRED for production
WILDEDITOR_API_KEY=your-super-secret-api-key-here-change-this
REQUIRE_AUTH=true

# Server Configuration
PORT=8000
HOST=0.0.0.0
ENVIRONMENT=development
DEBUG=true

# CORS Configuration 
FRONTEND_URL=http://localhost:5173

# Logging
LOG_LEVEL=DEBUG

# Workers (for production)
WORKERS=2

# Enable API documentation (disable in production)
ENABLE_DOCS=true

# Legacy Supabase Configuration (no longer used)
# SUPABASE_URL=your_supabase_project_url
# SUPABASE_SERVICE_KEY=your_supabase_service_role_key