# Development Environment Configuration
# Luminari Wilderness Editor Backend
# This file should be created for local development

# Server Configuration
PORT=8000
ENVIRONMENT=development
DEBUG=true

# CORS Configuration
FRONTEND_URL=http://localhost:5173

# Database Configuration (MySQL)
# Replace with your actual development MySQL database credentials
DB_HOST=localhost
DB_PORT=3306
DB_NAME=luminari_muddev
DB_USER=wildeditor_dev_user
DB_PASSWORD=your_dev_password

# Security
# Generate a secure secret key for JWT tokens (if using authentication)
SECRET_KEY=development_secret_key_change_in_production

# Logging
LOG_LEVEL=DEBUG
LOG_FILE=/var/log/wildeditor/backend-dev.log

# Performance
WORKERS=2
MAX_CONNECTIONS=50

# Feature Flags
ENABLE_DOCS=true   # Enable /docs in development
ENABLE_CORS_DEBUG=true

# Monitoring (optional)
SENTRY_DSN=your_dev_sentry_dsn_for_error_tracking
PROMETHEUS_METRICS=false
