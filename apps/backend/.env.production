# Production Environment Configuration
# Luminari Wilderness Editor Backend
# This file should be created on the production server with actual values

# Server Configuration
PORT=8000
ENVIRONMENT=production
DEBUG=false

# CORS Configuration
FRONTEND_URL=https://wildeditor.luminari.com

# Database Configuration (MySQL)
# Replace with your actual MySQL database credentials
DB_HOST=localhost
DB_PORT=3306
DB_NAME=luminari_mudprod
DB_USER=wildeditor_prod_user
DB_PASSWORD=your_secure_production_password

# Security
# Generate a secure secret key for JWT tokens (if using authentication)
SECRET_KEY=your_very_secure_secret_key_here_change_this_in_production

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/wildeditor/backend.log

# Performance
WORKERS=4
MAX_CONNECTIONS=100

# Feature Flags
ENABLE_DOCS=false  # Disable /docs in production for security
ENABLE_CORS_DEBUG=false

# Monitoring (optional)
SENTRY_DSN=your_sentry_dsn_for_error_tracking
PROMETHEUS_METRICS=true
